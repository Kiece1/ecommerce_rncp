{% set size = menuInfo | length %}
<ul class="{{ listStyle }}">
	{% for i in 0.. size - 1 %}
		{% set ref = "#sect" ~ i %}
		{% set currentPath = path(app.request.attributes.get('_route')) %}
		{% if  currentPath == "/home" %}
			<li>
				<a class="link" href={{ ref }}>{{ menuInfo[i] }}</a>
			</li>
		{% else %}
			<a href="{{ path('page', { 'indice': i}) }}">
				{% if i != indice or currentPath == "/panier" %}
					<li>
						{{ menuInfo[i] }}
					</li>
				{% else %}
					<li style="color:white;text-decoration:underline">
						{{ menuInfo[i] }}
					</li>
				{% endif %}
			</a>
		{% endif %}
	{% endfor %}
</ul>
